<Window x:Class="BCSH2_Cizek.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCSHP2_Cizek"
        mc:Ignorable="d"
        Title="Správce týmů" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="400" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260*" />
            <ColumnDefinition Width="520*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Margin="0,0,0,0" Grid.RowSpan="2">Týmy</Label>
        <DataGrid Grid.Column="1" Grid.Row="1" x:Name="lstTeams" AutoGenerateColumns="False" ItemsSource="{Binding Teams}" SelectionChanged="ListView_SelectionChanged" SelectedValue="{Binding SelectedTeam, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Název" Width="200"/>
                <DataGridTextColumn Binding="{Binding Competition}" Header="Soutěž" Width="200"/>
                <DataGridTextColumn Binding="{Binding Ranking}" Header="Umístění" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Margin="5,0,10,0">
            <Label>Název:</Label>
            <TextBox x:Name="txtName" Text="{Binding Name}" />
            <Label>Soutěž:</Label>
            <TextBox x:Name="textCompetition" Text="{Binding Competition}"/>
            <Label>Umístění:</Label>
            <TextBox x:Name="textRanking" Text="{Binding Ranking}"/>
            <Button Command="{Binding AddCommand}" x:Name="btnAdd" Margin="0,50,0,0">Přidat</Button>
            <Button Command="{Binding RemoveCommand}" x:Name="btnDelete" Margin="0,5,0,0">Smazat</Button>
            <Button Command="{Binding EditCommand}" x:Name="btnEdit" Margin="0,5,0,0">Upravit</Button>
            <Button Command="{Binding ShowTeamCommand}" x:Name="btnShow" Margin="0,5,0,0">Spravovat tým</Button>
        </StackPanel>
    </Grid>
</Window>
